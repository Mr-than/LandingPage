<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="110dp"
        android:text="@string/login"
        android:textColor="@color/text1"
        android:textSize="32sp" />

    <TextView
        android:textColor="@color/hello_w"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_width="213dp"
        android:layout_height="24dp"
        android:text="@string/hello_words"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="18dp"
        android:layout_marginTop="38dp"
        app:hintTextColor="@color/hint"
        app:boxBackgroundMode="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:textColorHint="@color/b"
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            app:drawableStartCompat="@drawable/group1"
            android:drawablePadding="20dp"
            android:background="#00000000"
            android:inputType="number"
            android:hint="请输入学号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="18dp"
        android:layout_marginTop="38dp"
        app:hintTextColor="@color/hint"
        app:boxBackgroundMode="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:textColorHint="@color/b"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            app:drawableStartCompat="@drawable/group2"
            android:drawablePadding="20dp"
            android:background="#00000000"
            android:hint="统一认证码后6位/19级及以前为身份证后6位"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.airbnb.lottie.LottieAnimationView

        android:id="@+id/lottie_layer"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:lottie_fileName="first.json" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/text_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/pwd"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setpwd"/>
    </LinearLayout>


    <Button
        android:textColor="@color/button"
        android:text="登录"
        android:textSize="15dp"
        android:background="@drawable/shape_1"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/text_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="206dp" />

</LinearLayout>